{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ğŸ‘ˆ Ä‘á»•i tá»« "bundler" sang "node" cho tÆ°Æ¡ng thÃ­ch tá»‘t hÆ¡n vá»›i PyCharm + React
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ğŸ‘ˆ ráº¥t quan trá»ng â€” sá»­a tá»« "preserve" Ä‘á»ƒ fix lá»—i TS7026
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
